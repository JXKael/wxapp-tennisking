/* pages/home/home.wxss */
page{
  background-color: #F3F3F3;
}

.head{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  background-color: white;
  border-bottom: 2rpx solid rgb(228, 228, 228);
}

.body{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #F3F3F3;
}

.tab{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.tab-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 94rpx;
  align-items: center;
}

.tab-item-icon{
  width: 28rpx;
  height: 28rpx;
  margin-left: 27%;
}

.tab-item-txt{
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  display: block;
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #545454;
}

.tab-item-txt-choosed{
  color: #009b42;
}

.scroll-menu{
  width: 100%;
  height: 86rpx;
  white-space: nowrap;
}

.scroll-menu-item{
  display: inline-block;
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0rpx 24rpx;
  font-size: 26rpx;
  text-align: center;
  color: #949494;
  border-bottom: 0rpx solid #949494;
}

.scroll-menu-item-choosed{
  color: rgb(0, 155, 66);
  border-bottom: 6rpx solid rgb(0, 155, 66);
}

.scroll-tag{
  width: 100%;
  height: 70rpx;
  white-space: nowrap;
  padding: 10rpx 0rpx; 
}

.scroll-tag-item{
  display: inline-block;
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  margin: auto 10rpx;
  padding: 0rpx 24rpx;
  font-size: 26rpx;
  text-align: center;
  color: #949494;
  border: 1rpx solid #e0e0e0;
  background-color: white;
  border-radius: 50rpx;
}

.scroll-tag-item-choosed{
  background-color: rgb(0, 155, 66);
  color: white;
  border-width: 0rpx;
}