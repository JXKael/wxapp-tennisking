.news-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.news-item{
  margin: 10rpx 30rpx;
  border-bottom: 1rpx solid #e4e4e4;
}

.news-top{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;
}

.news-date{
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx 10rpx 0rpx;
  width: 150rpx;
  height: 100rpx;
  background-color: #009b42;
  border-radius: 15rpx;
}

.news-date-top{
  background-color: #e99900;
}

.news-date text{
  text-align: center;
  color: white;
  font-size: 28rpx;
  vertical-align: center;
  margin: auto;
}

.news-player{
  display: flex;
  flex-direction: column;
  margin: 10rpx 0rpx 10rpx 10rpx;
  width: 100%;
  height: auto;
}

.news-player-name{
  width: 100%;
  height: 50rpx;
  color: #009b42;
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.news-player-tags{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: auto;
  margin-top: 5rpx;
}

.news-player-tag{
  display: block;
  width: auto;
  height: 35rpx;
  line-height: 35rpx;
  border: 1rpx solid #dadada;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #949494;
  margin-right: 15rpx;
  padding: 2rpx 10rpx;
}

.news-middle{
  height: auto;
  max-height: 250rpx;
  overflow: hidden;
  margin: 20rpx 0;
  display: block;
  color: #7a7a7a;
  font-size: 30rpx;
  line-height: 50rpx;
}

.news-middle-notfold{
  max-height: none;
}

.news-bottom{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  width: 100%;
  height: auto;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
  padding: 5rpx 0;
}

.news-author{
  color: #009b42;
  width: 160rpx;  
}

.news-number{
  display: flex;
  flex-direction: row-reverse;
  align-content: right;
  align-items: right;
  width: 100%;
}

.news-number-item{
  display: flex;
  flex-direction: row;
  margin: 0 5rpx;
  width: auto;
}

.news-number-icon{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 0 8rpx;
}

.news-number-text{
  margin: auto 0;
  width: 50rpx;
  color: #949494;
}

.news-number-text-liked{
  color: #e99900;
}
