.player-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.player-item{
  display: block;
  margin: 10rpx 30rpx;
  border-bottom: 1rpx solid #e4e4e4;
  height: 100rpx;
  line-height: 100rpx;
}

.player-name{
  display: block;
  position: absolute;
  left: 30rpx;
  width: auto;
  height: 100rpx;
  font-size: 30rpx;
}

.player-news-num{
  display: block;
  position: absolute;
  right: 100rpx;
  min-width: 80rpx;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: white;
  font-size: 25rpx;
  margin: 30rpx 0;
  padding: 0 20rpx;
  border-radius: 40rpx;
  background-color: #009b42;
}

.player-left-arrow{
  display: block;
  position: absolute;
  right: 30rpx;
  width: 22rpx;
  height: 38rpx;
  margin: 31rpx 0 31rpx 30rpx;
}